{
  "manifest_version": 3,
  "name": "ChatGPT Code Preview",
  "version": "1.2",
  "description": "Preview, copy, and download code from ChatGPT",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}