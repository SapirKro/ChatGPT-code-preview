{
  "manifest_version": 3,
  "name": "ChatGPT Code Preview",
  "version": "1.0",
  "description": "Provides live preview for code generated by ChatGPT",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}